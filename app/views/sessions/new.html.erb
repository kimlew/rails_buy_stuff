<div class="buy_stuff_form">
  
  <% if flash[:alert] %>
    <p id="notice"><%= flash[:alert] %></p>
  <% end %>
  
  <%= form_tag do %>
    <fieldset>
    
      <legend>Please Log In</legend>
      <div class="field">
        <%= label_tag :name, 'Name:' %>
        <%= text_field_tag :name, params[:name] %>
      </div>

      <div class="field">
        <%= label_tag :password, 'Password:' %>
        <%= password_field_tag :password, params[:password] %>
      </div>

      <div class="actions">
        <%= submit_tag "Login" %>
      </div>

    </fieldset>
  <% end %><%# End for: form_tag do %>
  
</div><%# End for: div class="buy_stuff_form" %>
